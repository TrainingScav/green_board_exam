{{> layout/header}}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <!-- 왼쪽: 검색바 -->
        <form class="flex-grow-1 d-flex" style="max-width: 700px;">
            <div class="input-group w-100 shadow-sm">
                <input type="text" class="form-control form-control-lg rounded-start" placeholder="게시물을 검색하세요">
                <button class="btn btn-primary rounded-end" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>

        <!-- 오른쪽: 등록 버튼 -->
        {{#sessionUser}}
            <a href="/image-infos/form" class="btn btn-primary btn-lg fw-bold px-4 shadow-sm">등록하기</a>
        {{/sessionUser}}
    </div>

    <h2 class="fw-bold mb-4">이미지 게시물 목록</h2>
    <div class="row g-4">
        {{#imageInfoList}}
            <div class="col-12 col-sm-6 col-lg-3 d-flex">
                <div class="card post-card w-100">
                    <!-- 카테고리 뱃지 -->
                    <span class="badge bg-primary position-absolute top-0 end-0 m-2 rounded-pill">{{category}}</span>
                    <img src="{{imagePath}}" class="card-img-top" alt="이미지 샘플">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text text-truncate">{{content}}</p>

                        <!-- 숨겨진 a태그 -->
                        <a href="/image-infos/{{imgInfoId}}" class="stretched-link"></a>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="small text-muted">작성자: {{instId}}</span>
                            <div class="d-flex gap-2">
                                <i class="fa-regular fa-thumbs-up"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/imageInfoList}}
        <!-- 동일한 구조 반복 -->
    </div>

    <div class="d-flex justify-content-center mt-5">
        <nav>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">이전</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">다음</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
{{> layout/footer}}
{{> layout/header}}
<div class="container my-5">
    <div class="card shadow-lg mx-auto" style="max-width: 900px;">
        <!-- 이미지 -->
        {{#imageInfo}}
        <img src="{{imagePath}}" class="ifu-detail-img card-img-top" alt="이미지 상세">

        <div class="card-body">

            <!-- 제목 + 카테고리 -->
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                <h3 class="fw-bold mb-0">{{title}}</h3>
                <span class="badge bg-primary rounded-pill">{{category}}</span>
            </div>

            <!-- 설명 -->
            <p class="card-text mb-4" style="font-size: 1.1rem;">
                {{content}}
            </p>

            <!-- 작성자 + 인터랙션 -->
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <span class="text-muted">작성자: {{instId}}</span>
            </div>

            <!-- 수정/삭제 버튼 -->
            {{#imageInfoOwner}}
            <div class="d-flex gap-2 justify-content-end">
                <a href="/image-infos/{{imgInfoId}}/update" class="btn btn-warning fw-semibold">수정</a>
                <form action="/image-infos/{{imgInfoId}}/delete" method="post">
                    <button class="btn btn-danger fw-semibold" type="submit" onclick="confirm('정말로 게시물을 삭제 하시겠습니까?')">삭제</button>
                </form>

            </div>
            {{/imageInfoOwner}}
        </div>
        {{/imageInfo}}
    </div>

</div>
{{> layout/footer}}